# Configuration d'environnement pour le système de rappels
# Copiez ce fichier vers .env et modifiez les valeurs

# Base de données PostgreSQL
DB_HOST=192.168.1.101
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=12345
DB_NAME=hospital_reminders

# Configuration Twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=http://your-domain.com/webhook

# Configuration serveur
BASE_URL=http://localhost:5000
FLASK_ENV=development
FLASK_DEBUG=True

# Configuration de l'application
APP_ENV=development
LOG_LEVEL=INFO
APP_TIMEZONE=Africa/Douala
APP_DEFAULT_LANGUAGE=fr
APP_SUPPORTED_LANGUAGES=fr,en,es

# Paramètres des rappels
REMINDER_DEFAULT_ADVANCE_HOURS=24
REMINDER_MAX_RETRIES=3
REMINDER_RETRY_INTERVAL_MINUTES=30

# Canaux de communication
COMMUNICATION_CHANNELS=sms,email,call,whatsapp

# Instructions:
# 1. Copiez ce fichier vers .env
# 2. Configurez vos credentials Twilio
# 3. Modifiez BASE_URL pour votre domaine
# 4. Ne commitez jamais le fichier .env dans le contrôle de version